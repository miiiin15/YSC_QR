<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#554896">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>
            <ImageView
                android:id="@+id/Main_img"
                android:src="@drawable/ysc2"
                android:background="@drawable/ysc_sq1"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/Main"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="로 그 인"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginBottom="50dp"/>
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/Login_ID"
        android:background="@drawable/ysc_sq"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:textAlignment="center"
        android:hint="아이디를 입력하세요.   "/>

    <EditText
        android:id="@+id/Login_Password"
        android:background="@drawable/ysc_sq"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:hint="비밀번호를 입력하세요."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/Login_btn"
            android:background="@drawable/ysc_sq2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#F8FAFF"
            android:textSize="20dp"
            android:text="로그인"/>

        <Button
            android:id="@+id/Register_btn"
            android:background="@drawable/ysc_sq2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#F8FAFF"
            android:textSize="20dp"
            android:text="회 원 가 입" />
    </LinearLayout>
    <Button
        android:id="@+id/find_btn"
        android:background="@drawable/ysc_sq2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:textColor="#F8FAFF"
        android:textSize="20dp"
        android:text="아이디/비밀번호 찾기" />
    <Button
        android:id="@+id/gest_btn"
        android:background="@drawable/ysc_sq2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#F8FAFF"
        android:textSize="20dp"
        android:text="비회원 온도 등록" />
</LinearLayout>